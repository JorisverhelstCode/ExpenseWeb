@model ExpensesDeleteExpenseViewModel

<span>
    Are You sure you want to delete the expense of @Model.Amount made on @Model.Date?
</span>
<strong>Description:</strong>
<span>@Model.Description</span>
<form asp-controller="Expenses" asp-action="DeleteExpense" asp-route-id="@Model.ID" method="post">
    <button type="submit" class="btn-danger">Yes</button>
    <a asp-controller="Expenses" asp-action="@Model.ReturnUrl" asp-route-id="@Model.ID">No</a>
</form>

